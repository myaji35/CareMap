// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - Custom user model with role-based access
model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique @db.VarChar(150)
  email        String   @unique @db.VarChar(254)
  password     String   @db.VarChar(255)
  userType     UserType @default(USER) @map("user_type")
  phoneNumber  String?  @map("phone_number") @db.VarChar(20)
  organization String?  @db.VarChar(255)
  isActive     Boolean  @default(true) @map("is_active")
  isStaff      Boolean  @default(false) @map("is_staff")
  isSuperuser  Boolean  @default(false) @map("is_superuser")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("users")
}

enum UserType {
  ADMIN   @map("admin")
  MANAGER @map("manager")
  USER    @map("user")

  @@map("user_type")
}

// Institution model - Long-term care facility information
model Institution {
  id               Int                   @id @default(autoincrement())
  institutionCode  String                @unique @map("institution_code") @db.VarChar(20)
  name             String                @db.VarChar(255)
  serviceType      String?               @map("service_type") @db.VarChar(100)
  capacity         Int?
  currentHeadcount Int?                  @map("current_headcount")
  address          String?               @db.VarChar(255)
  operatingHours   String?               @map("operating_hours") @db.Text
  latitude         Decimal?              @db.Decimal(10, 8)
  longitude        Decimal?              @db.Decimal(11, 8)
  lastUpdatedAt    DateTime              @default(now()) @map("last_updated_at")
  history          InstitutionHistory[]

  @@map("institutions")
}

// InstitutionHistory model - Monthly change history tracking
model InstitutionHistory {
  id               Int         @id @default(autoincrement())
  institutionId    Int         @map("institution_id")
  recordedDate     DateTime    @map("recorded_date") @db.Date
  name             String?     @db.VarChar(255)
  address          String?     @db.VarChar(255)
  capacity         Int?
  currentHeadcount Int?        @map("current_headcount")
  institution      Institution @relation(fields: [institutionId], references: [id], onDelete: Cascade)

  @@map("institution_history")
}
